@page
@model LoginModel


<form id="account" method="post" class="col-6 m-auto">

    <table class="table text-center">
        <thead class="bg-dark text-white">
        <th colspan="2">Welcome To, World of Essay</th>
        </thead>
        <tbody>
            <tr>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </tr>

            <tr class="w-50">
                <td >
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email adresiniz.."/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </td>
                
            </tr>

            <tr class="w-50">
                <td>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Şifreniz.." />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </td>
            </tr>

            <tr>
                <td>
                    <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-outline-dark">Giriş Yap</button>
                </td>
            </tr>
        </tbody>

    </table>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
