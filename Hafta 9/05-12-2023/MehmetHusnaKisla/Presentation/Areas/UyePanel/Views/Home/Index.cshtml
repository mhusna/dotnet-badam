@using Presentation.Models.VMs;
@model EssayInsertVM

<form method="post" asp-action="EssayInsert" class="col-9 m-auto">
    <table class="table text-center">
        <thead class="bg-dark text-white">
            <th colspan="2">Yeni Makale</th>
        </thead>
        <tbody>
            <tr>
                <td>
                    <label class="form-label me-3 fw-bold" asp-for="@Model.EssayName"></label>
                    <input class="form-control" asp-for="@Model.EssayName" />
                </td>
            </tr>

            <tr>
                <td>
                    <label class="form-label me-3 fw-bold" asp-for="@Model.EssayContent"></label>
                    <textarea class="form-control" cols="10" rows="10" asp-for="@Model.EssayContent"></textarea>
                </td>
            </tr>

            <tr>
                <td>
                    <label class="form-label me-3 fw-bold" asp-for="@Model.Topics"></label>
                    <select class="form-control" asp-for="@Model.TopicID" asp-items="@Model.Topics">
                    </select>
                </td>
            </tr>

            <tr>
                <td colspan="3">
                    <input class="btn btn-outline-dark" type="submit" value="Ekle" />
                </td>
            </tr>
        </tbody>
    </table>
</form>