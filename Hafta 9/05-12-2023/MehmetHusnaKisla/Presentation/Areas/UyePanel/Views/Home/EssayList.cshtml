@using MehmetHusnaKisla.Application.Models.VMs;
@model IEnumerable<EssayListVM>

<div class="col-9 m-auto">
    <table class="table table-hover text-center">
        <thead class="bg-dark text-white">
        <th>Makale Başlığı</th>
        <th>Yazar</th>
        <th>Makale Konusu</th>
        <th>Yayınlanma Tarihi</th>
        <th>Detayına Git</th>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EssayName</td>
                    <td>@item.PublisherName</td>
                    <td>@item.TopicName</td>
                    <td>@item.InsertDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="EssayDetail" asp-route-id="@item.EssayID" class="btn btn-outline-dark">
                            Detay
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>