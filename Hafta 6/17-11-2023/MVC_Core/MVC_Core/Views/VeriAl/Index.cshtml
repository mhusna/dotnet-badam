<form method="post" action="ModelYakala">
    <input asp-for="UrunID"/>
    <input asp-for="UrunAdi" type="password" style="border: 1px solid green;"/>
    <input asp-for="Fiyat" type="text" />
    <input type="submit" value="Gönder" />
</form>