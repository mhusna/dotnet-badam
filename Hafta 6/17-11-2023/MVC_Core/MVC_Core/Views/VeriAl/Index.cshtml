@model Urun
<br />
<br />
<h2>Yöntem 5: Model Kullanımı (HTML Helper)</h2>
<form method="post" action="ModelYakala">
    @Html.TextBoxFor(x => x.UrunID)
    @Html.TextBoxFor(x => x.UrunAdi, "", new {type = "password", style="border: 1px solid red;"})
    @Html.TextBoxFor(x => x.Fiyat)
    <input type="submit" value="Gönder" />
</form>

<br />
<br />
