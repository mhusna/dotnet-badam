@model List<Product>

<table class="table table-striped">
    <thead>
        <th>ProductID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>Update</th>
        <th>Delete</th>
    </thead>

    <tbody>
    @foreach (Product product in Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.ProductName</td>
            <td>@product.Price</td>
            <td>@product.CategoryID</td>
            <td>
                <a asp-controller="Home" asp-action="Guncelle" asp-route-id="@product.ProductID" class="btn btn-outline-info">Update</a>
            </td>
            <td>
                <form asp-controller="Home" asp-action="Sil" method="post">
                    <input type="hidden" asp-for="@product.ProductID" name="ProductID"/>
                    <input type="submit" value="Sil" class="btn btn-outline-danger" />
                </form>
            </td>
        </tr>
    }
    </tbody>
</table> 